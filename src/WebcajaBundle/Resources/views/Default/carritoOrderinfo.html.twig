{% extends 'font.html.twig' %}

{% block body %}
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('webcaja_homepage') }}">鸿跃Carsun 订货系统</a>
            </div>
        </div>
    </nav>
<div class="container">
    <h2 style="line-height: 50px;">订单：{{ orderInfo.id }} 已经创建完成！ 请确认订单并等待发货。<br>如有任何疑问，请咨询电话：653855071。<br>
        <span style="color: #ff1f30">选择银行转账付款方式的客户请将货款：<br>{{ orderInfo.totalPrice }} 欧元打入账户:<br>
            ESXX XXXX XXXX XXXX</span></h2>
    <br>
    <button class="button button-rounded" onclick="window.print();"><i class="fa fa-print"></i> 打印</button>
    <br><br><br>
    <table class="table-bordered table-striped table-hover" width="400px" style="height: 500px">
        <tbody>
        <tr>
            <th>订单号</th>
            <td>{{ orderInfo.id }}</td>
        </tr>
        <tr>
            <th>订单生成时间</th>
            <td>{% if orderInfo.orderDate %}{{ orderInfo.orderDate|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>商品总价</th>
            <td>{{ orderInfo.goodsFee }} 欧元</td>
        </tr>
        <tr>
            <th>运费</th>
            <td>{{ orderInfo.shipFee }} 欧元</td>
        </tr>
        <tr>
            <th style="color: #ff0000">订单总价(折后总价)</th>
            <td style="color: #ff0000">{{ orderInfo.totalPrice }} 欧元</td>
        </tr>
        <tr>
            <th>付款方式</th>
            <td>{{ orderInfo.payType }}</td>
        </tr>
        <tr>
            <th>收货人姓名</th>
            <td>{{ orderInfo.receiverName }}</td>
        </tr>
        <tr>
            <th>收货人联系电话</th>
            <td>{{ orderInfo.receiverPhone }}</td>
        </tr>
        <tr>
            <th>收货地址</th>
            <td>{{ orderInfo.receiverAdress }}</td>
        </tr>
        <tr>
            <th>城市</th>
            <td>{{ orderInfo.receiverCity }}</td>
        </tr>
        <tr>
            <th>省份</th>
            <td>{{ orderInfo.receiverProvince }}</td>
        </tr>
        <tr>
            <th>邮编</th>
            <td>{{ orderInfo.receiverPostcode }}</td>
        </tr>
        <tr>
            <th>公司税号</th>
            <td>{{ orderInfo.receiverShuihao }}</td>
        </tr>
        <tr>
            <th>订单已确认</th>
            <td>{% if orderInfo.isConfirmed %}是{% else %}否{% endif %}</td>
        </tr>
        </tbody>
    </table>
</div>

    <nav class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="container navbuttom">
            <ul class="nav navbar-nav">
                <li><a href="{{ path('webcaja_homepage') }}"><span class="glyphicon glyphicon-home" aria-hidden="true"></span><br>首页</a></li>
                <li><a href="{{ path('webcaja_categoryList') }}"><span class="glyphicon glyphicon-th-large" aria-hidden="true"></span><br>选购</a></li>
                <li><a href="{{ path('webcaja_info') }}"><span class="glyphicon glyphicon-search" aria-hidden="true"></span><br>用户须知</a></li>
                <li class="active"><a href="{{ path('webcaja_carrito') }}"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span><br>购物车</a></li>
            </ul>
        </div>
    </nav>
    <script>
        window.onbeforeunload = function(event) { return confirm("确定离开此页面吗？"); }
    </script>
{% endblock %}
