{% extends 'base.html.twig' %}

{% block body %}
    <h1>web叫货系统</h1>
    <ul>
        <li><a href="{{ path('webcaja_homepage') }}">首页</a></li>
        <li><a href="{{ path('webcaja_categoryList') }}">选购</a></li>
        <li><a href="{{ path('webcaja_homepage') }}">搜索</a></li>
        <li><a href="{{ path('webcaja_carrito') }}">购物车</a></li>
        <li><a href="{{ path('webcaja_clearCarrito') }}">清空购物车</a></li>
        <li><a href="{{ path('webcaja_clearCarrito') }}">确认订单</a></li>
    </ul>
    <div id="shangpin">
    {% for productsEnCarrito in productsEnCarritos %}
        <hr class="featurette-divider">
        <ul>
            <li>产品：{{ productsEnCarrito.name }}</li>
            <li>单位：<span id="unit">{{ productsEnCarrito.unit }}</span>件/包</li>
            <li>编号：{{ productsEnCarrito.code }}</li>
            <li>单价：<span id="price">{{ productsEnCarrito.price }}</span> €/件</li>
            <li>数量：<input class="text_box" name="" type="text" value="1" />包</li>
            <input class="min" type="button" value="-"/>
            <input class="add" type="button" value="+"/>
            <li>小计：<span id="heji"></span> €</li>
        </ul>
    {% endfor %}
        <p>总价:<label id="total">0</label> €</p>
    </div>
{% endblock %}
