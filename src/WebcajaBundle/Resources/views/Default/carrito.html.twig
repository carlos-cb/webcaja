{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/webcaja/css/jquery.fancybox.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <h1>web叫货系统</h1>
    <ul>
        <li><a href="{{ path('webcaja_homepage') }}">首页</a></li>
        <li><a href="{{ path('webcaja_categoryList') }}">选购</a></li>
        <li><a href="{{ path('webcaja_homepage') }}">搜索</a></li>
        <li><a href="{{ path('webcaja_carrito') }}">购物车</a></li>
        <li><a href="{{ path('webcaja_clearCarrito') }}">清空购物车</a></li>
        <li><button class="jiezhang" href="#formorder">结账</button></li>
    </ul>
    <div id="shangpin">
    {% for cartItem in cartItems %}
        <hr class="featurette-divider">
        <ul>
            <li>产品id：<span id="id">{{ cartItem.product.id }}</span></li>
            <li>产品：<span id="name">{{ cartItem.product.name }}</span></li>
            <li>单位：<span id="unit">{{ cartItem.product.unit }}</span>件/包</li>
            <li>编号：<span id="codigo">{{ cartItem.product.code }}</span></li>
            <li>单价：<span id="price">{{ cartItem.product.price }}</span> €/件</li>
            <li>数量：<input class="text_box" name="" type="text" value="{{ cartItem.quantity }}" />包</li>
            <input class="min" type="button" value="-"/>
            <input class="add" type="button" value="+"/>
            <li>小计：<span id="heji"></span> €</li>
        </ul>
    {% endfor %}
        <p>总价:<label id="total">0</label> €</p>
    </div>
    <div style="display: none;" id="formorder">
        <form method="post" enctype="multipart/form-data" id="gform_10" action="{{ path('webcaja_carritoOrderinfo') }}">
            <input name="name" id="input_10_1" class="medium" type="text">
            <input type="submit" value="保存">
        </form>
    </div>
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('bundles/webcaja/js/jquery.fancybox.pack.js') }}"></script>
    {% endblock %}
{% endblock %}
