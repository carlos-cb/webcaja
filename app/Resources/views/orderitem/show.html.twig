{% extends 'base.html.twig' %}

{% block body %}
    <h1>OrderItem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orderItem.id }}</td>
            </tr>
            <tr>
                <th>Unitprice</th>
                <td>{{ orderItem.unitPrice }}</td>
            </tr>
            <tr>
                <th>Unit</th>
                <td>{{ orderItem.unit }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ orderItem.quantity }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ orderItem.name }}</td>
            </tr>
            <tr>
                <th>Namees</th>
                <td>{{ orderItem.nameEs }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ orderItem.codigo }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ orderItem.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('orderitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('orderitem_edit', { 'id': orderItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
